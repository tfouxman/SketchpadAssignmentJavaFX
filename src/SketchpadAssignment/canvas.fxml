<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="650.0" prefWidth="850.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="SketchpadAssignment.CanvasController">

    <top>
        <VBox>
            <MenuBar>
                <Menu text="File">
                    <MenuItem onAction="#onSave" text="Save" />
                    <MenuItem onAction="#onExit" text="Exit" />
                </Menu>
            </MenuBar>
            <ToolBar>
                <HBox alignment="CENTER" spacing="5">
                    <Slider fx:id="brushSize" majorTickUnit="1.0" max="90" min="1" minorTickCount="0"
                            snapToTicks="true" value="16.0" />
                    <TextField fx:id="brushSizeText" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="20.0" prefWidth="30.0" text="16" />
                    <Label text="Stroke:">
                       <HBox.margin>
                          <Insets left="10.0" />
                       </HBox.margin>
                    </Label>
                    <ColorPicker fx:id="cpLine" prefHeight="25.0" prefWidth="90.0">
                        <HBox.margin>
                            <Insets right="15.0" />
                        </HBox.margin>
                    </ColorPicker>
                    <Label text="Fill:">
                       <HBox.margin>
                          <Insets left="10.0" />
                       </HBox.margin>
                    </Label>
                    <ColorPicker fx:id="cpFill" prefHeight="25.0" prefWidth="90.0">
                       <HBox.margin>
                          <Insets right="15.0" />
                       </HBox.margin>
                    </ColorPicker>
                    <ToggleButton fx:id="select">
                       <toggleGroup>
                          <ToggleGroup fx:id="tools" />
                       </toggleGroup>
                    </ToggleButton>
                    <ToggleButton fx:id="brush" toggleGroup="$tools" selected="true">
                    </ToggleButton>
                    <ToggleButton fx:id="line" toggleGroup="$tools">
                    </ToggleButton>
                    <ToggleButton fx:id="rectangle" toggleGroup="$tools">
                    </ToggleButton>
                    <ToggleButton fx:id="square" toggleGroup="$tools">
                    </ToggleButton>
                    <ToggleButton fx:id="ellipse" toggleGroup="$tools">
                    </ToggleButton>
                    <ToggleButton fx:id="circle" toggleGroup="$tools">
                    </ToggleButton>
                    <ToggleButton fx:id="eraser" toggleGroup="$tools">
                    </ToggleButton>
                </HBox>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <Canvas fx:id="canvas" height="590.0" width="850.0" />
    </center>
</BorderPane>
